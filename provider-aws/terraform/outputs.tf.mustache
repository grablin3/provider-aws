{{#hasFrontend}}
output "s3_bucket_name" {
  description = "Name of the S3 bucket for client assets"
  value       = aws_s3_bucket.client.bucket
}

output "cloudfront_distribution_id" {
  description = "CloudFront distribution ID"
  value       = aws_cloudfront_distribution.client.id
}

output "cloudfront_domain_name" {
  description = "CloudFront distribution domain name"
  value       = aws_cloudfront_distribution.client.domain_name
}
{{/hasFrontend}}

{{#hasBackend}}
output "load_balancer_dns_name" {
  description = "Load balancer DNS name"
  value       = aws_lb.server.dns_name
}

output "load_balancer_zone_id" {
  description = "Load balancer zone ID"
  value       = aws_lb.server.zone_id
}
{{/hasBackend}}

{{#hasDatabase}}
{{#isPostgreSQL}}
output "database_endpoint" {
  description = "RDS PostgreSQL database endpoint"
  value       = aws_db_instance.database.endpoint
  sensitive   = true
}
{{/isPostgreSQL}}
{{#isMySQL}}
output "database_endpoint" {
  description = "RDS MySQL database endpoint"
  value       = aws_db_instance.database.endpoint
  sensitive   = true
}
{{/isMySQL}}
{{#isMariaDB}}
output "database_endpoint" {
  description = "RDS MariaDB database endpoint"
  value       = aws_db_instance.database.endpoint
  sensitive   = true
}
{{/isMariaDB}}
{{#isOracle}}
output "database_endpoint" {
  description = "RDS Oracle database endpoint"
  value       = aws_db_instance.database.endpoint
  sensitive   = true
}
{{/isOracle}}
{{#isSQLServer}}
output "database_endpoint" {
  description = "RDS SQL Server database endpoint"
  value       = aws_db_instance.database.endpoint
  sensitive   = true
}
{{/isSQLServer}}
{{#isMongoDB}}
output "database_endpoint" {
  description = "DocumentDB cluster endpoint"
  value       = aws_docdb_cluster.database.endpoint
  sensitive   = true
}
{{/isMongoDB}}
{{#isRedis}}
output "database_endpoint" {
  description = "ElastiCache Redis endpoint"
  value       = aws_elasticache_replication_group.database.primary_endpoint_address
  sensitive   = true
}
{{/isRedis}}
{{#isElasticsearch}}
output "database_endpoint" {
  description = "OpenSearch domain endpoint"
  value       = aws_opensearch_domain.database.endpoint
  sensitive   = true
}
{{/isElasticsearch}}
{{#isCassandra}}
output "database_endpoint" {
  description = "Keyspaces keyspace endpoint"
  value       = "cassandra.${data.aws_region.current.name}.amazonaws.com"
  sensitive   = true
}
{{/isCassandra}}
{{#isCouchbase}}
output "database_endpoint" {
  description = "Couchbase cluster endpoint"
  value       = join(",", aws_instance.couchbase[*].private_ip)
  sensitive   = true
}
{{/isCouchbase}}
{{#isNeo4j}}
output "database_endpoint" {
  description = "Neo4j cluster endpoint"
  value       = aws_instance.neo4j[0].private_ip
  sensitive   = true
}
{{/isNeo4j}}
{{/hasDatabase}}

{{#hasBackend}}
output "autoscaling_group_name" {
  description = "Auto Scaling Group name"
  value       = aws_autoscaling_group.server.name
}

output "api_bucket_name" {
  description = "S3 bucket for API data, uploads, and application storage"
  value       = aws_s3_bucket.api.bucket
}
{{/hasBackend}}

{{#hasBackend}}
output "ops_bucket_name" {
  description = "S3 bucket for operations, deployment artifacts, JAR files, and scripts"
  value       = aws_s3_bucket.ops.bucket
}
{{/hasBackend}}

{{#hasFrontend}}
output "ui_domain" {
  description = "UI domain name for the application"
  value       = local.ui_domain
}
{{/hasFrontend}}

output "certificate_arn" {
  description = "ACM certificate ARN (if provided)"
  value       = var.certificate_arn != "" ? var.certificate_arn : "none"
}

