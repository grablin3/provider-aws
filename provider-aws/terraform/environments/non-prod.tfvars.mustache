# Terraform Variables - {{environment}} Environment
# Generated by Genesis3

# AWS Configuration
aws_region = "{{awsRegion}}"
environment = "{{environment}}"

# Domain Configuration
domain_base = "{{domain}}"
app_id = "{{projectName}}"  # Application/Project ID for API and UI subdomains
# domain_name starts empty - will be set by SSL cert workflow after certificate is created
domain_name = ""

# EC2 Configuration
instance_type = "{{instanceType}}"
min_size = 1
max_size = 2
desired_capacity = 1

# Database Configuration
database_instance_class = "{{databaseClass}}"
database_allocated_storage = 20

# Network Security
allowed_cidr_blocks = ["0.0.0.0/0"]

