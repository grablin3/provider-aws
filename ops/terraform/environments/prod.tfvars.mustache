# Terraform Variables - Production Environment
# Generated by Genesis3

# AWS Configuration
aws_region = "{{awsRegion}}"
environment = "prod"

# Domain Configuration
domain_base = "{{domain}}"
app_id = "{{projectName}}"
# domain_name starts empty - will be set by SSL cert workflow after certificate is created
domain_name = ""

# EC2 Configuration
instance_type = "t2.small"
min_size = 2
max_size = 4
desired_capacity = 2

# Database Configuration
database_instance_class = "db.t3.small"
database_allocated_storage = 50

# Network Security
allowed_cidr_blocks = ["0.0.0.0/0"]
